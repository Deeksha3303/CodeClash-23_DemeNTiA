  </style>
  <script>
    function toggleState(buttonId) {
      var button = document.getElementById(buttonId);
      var currentState = button.dataset.state;

      // Toggle the state between 0 and 1
      var newState = currentState === '0' ? '1' : '0';

      // Update the button's state
      button.dataset.state = newState;

      // Update the button's appearance based on the state
      if (newState === '1') {
        button.classList.remove('inactive');
        button.classList.add('active');
      } else {
        button.classList.remove('active');
        button.classList.add('inactive');
      }
    }
  </script>
</head>
<body>
  <h1>Update Your Status</h1>
  <div class="button-container">
    <button id="Teacher_1" class="inactive" data-state="0" onclick="toggleState('Teacher_1')">TEACHER 1</button>
    <button id="Teacher_2" class="inactive" data-state="0" onclick="toggleState('Teacher_2')">TEACHER 2</button>
    <button id="Teacher_3" class="inactive" data-state="0" onclick="toggleState('Teacher_3')">TEACHER 3</button>
    <button id="Teacher_4" class="inactive" data-state="0" onclick="toggleState('Teacher_4')">TEACHER 4</button>
